<div class="full-width-banner">
    {% if section.settings.media_type == 'image' %}
      {% if section.settings.banner_image != blank %}
      <img 
        src="{{ section.settings.banner_image | image_url }}" 
        alt="{{ section.settings.banner_image_alt | escape }}" 
        class="banner-media"
        loading="lazy"
        width="100%"
        height="100%"         
      />
      {% else %}
        {{ 'image' | placeholder_svg_tag }}        
      {%  endif  %}
    {% elsif section.settings.media_type == 'video' %}
      {% if section.settings.banner_video != blank %}
        <video 
          class="banner-media" 
          autoplay
          muted 
          loop 
          playsinline
          poster        
        >
          {% for source in section.settings.banner_video.sources %}
            <source src="{{ source.url }}" type="{{ source.mime_type }}">
          {% endfor %}
        </video>
      {% else %}
        {{ 'image' | placeholder_svg_tag }}        
      {%  endif  %}      
    {% endif %}
  </div>
  
  <link rel="stylesheet" href="{{ 'fullwidth-multimedia-banner.css' | asset_url }}">

  {% schema %}
  {
    "name": "Full Width Banner",
    "settings": [
      {
        "type": "select",
        "id": "media_type",
        "label": "Media Type",
        "default": "image",
        "options": [
          {
            "value": "image",
            "label": "Image"
          },
          {
            "value": "video",
            "label": "Video"
          }
        ]
      },
      {
        "type": "image_picker",
        "id": "banner_image",
        "label": "Banner Image",
        "info": "Upload a high-resolution image.",
      },
      {
        "type": "text",
        "id": "banner_image_alt",
        "label": "Banner Image Alt Text",
        "default": "Banner Image"
      },
      {
        "type": "video",
        "id": "banner_video",
        "label": "Banner Video",
        "info": "Upload a high-resolution video.",
      },
      {
        "type": "image_picker",
        "id": "video_poster",
        "label": "Video Poster Image",
        "info": "Optional: Upload an image to be shown before the video starts."
      }
    ],
    "presets": [
      {
        "name": "Custom Full Width Multimedia Banner",
        "category": "Custom"
      }
    ]
  }
  {% endschema %}
  