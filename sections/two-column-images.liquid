{{ 'two-column-images.css' | asset_url | stylesheet_tag }}

<div class="two-column-images-section">
    <div class="two-column-images {% if section.settings.layout == 'row' %}flex{% else %}column{% endif %}">
      <div class="custom-column {% if section.settings.layout == 'row' %}half{% endif %}">
        {% if section.settings.main_image != blank %}
          <img 
            src="{{ section.settings.main_image | image_url }}" 
            alt="{{ section.settings.main_image_alt | escape}}"
            width="100%"
            height="100%"            
          />
        {% else %}
          {{ 'image' | placeholder_svg_tag }}          
        {% endif %}
      </div>
      <div class="custom-column">
        {% if section.settings.secondary_image != blank %}
            <img 
                src="{{ section.settings.secondary_image | image_url }}" 
                alt="{{ section.settings.secondary_image_alt | escape}}"
                width="100%"
                height="100%"            
            />     
        {% else %}
          {{ 'image' | placeholder_svg_tag }}                
        {% endif %}
      </div>
    </div>
</div>

{% schema %}
{
  "name": "Two Column Images",
  "settings": [
    {
      "type": "image_picker",
      "id": "main_image",
      "label": "Main image"
    },
    {
      "type": "text",
      "id": "main_image_alt",
      "label": "Main image Alt Text",
      "default": "Alt text for Main image"
    },
    {
      "type": "image_picker",
      "id": "secondary_image",
      "label": "Secondary Image"
    },
    {
      "type": "text",
      "id": "secondary_image_alt",
      "label": "Secondary Image Alt Text",
      "default": "Alt text for Secondary Image"
    },
    {
      "type": "select",
      "id": "layout",
      "label": "Layout",
      "default": "row",
      "options": [
        {
          "value": "row",
          "label": "Row"
        },
        {
          "value": "column",
          "label": "Column"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Two Column Images",
      "category": "Custom"
    }
  ]
}
{% endschema %}
